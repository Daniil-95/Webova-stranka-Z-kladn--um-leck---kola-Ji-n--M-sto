header.page-header
	// RD Navbar
	.rd-navbar-wrap
		nav.rd-navbar.rd-navbar-default-with-top-panel.rd-navbar-default-with-top-panel-gray-nav(data-layout='rd-navbar-fixed', data-sm-layout='rd-navbar-fixed', data-md-layout='rd-navbar-fullwidth', data-md-device-layout='rd-navbar-fixed', data-lg-layout='rd-navbar-fullwidth', data-lg-device-layout="rd-navbar-fullwidth", data-md-stick-up-offset="90px" data-lg-stick-up-offset="150px" data-stick-up='true' data-sm-stick-up='true' data-md-stick-up='true' data-lg-stick-up='true')
			.rd-navbar-top-panel.rd-navbar-collapse
				.rd-navbar-top-panel-inner
					//-left side
					.left-side
						// Contact Info
						.contact-info
							.unit.unit-middle.unit-horizontal.unit-spacing-xs
								.unit__left
									span.icon.icon-primary.text-middle.mdi.mdi-phone
								.unit__body
									a(href='tel:#').text-middle 1-800-1234-567

					//-center side
					.center-side
						// RD Navbar Brand
						.rd-navbar-brand.fullwidth-brand
							a.brand-name(href='index.html')
								+png(logoDefault)

					//- right side
					.right-side
						a(href='about-me.html').button.button-bold.button-secondary-outline.button-square: span book now


			.rd-navbar-inner
				// RD Navbar Panel
				.rd-navbar-panel
					// RD Navbar Toggle
					button.rd-navbar-toggle(data-rd-navbar-toggle='.rd-navbar-nav-wrap')
						span

					// RD Navbar collapse toggle
					button.rd-navbar-collapse-toggle(data-rd-navbar-toggle='.rd-navbar-collapse')
						span

					// RD Navbar Brand
					.rd-navbar-brand.mobile-brand
						a.brand-name(href='index.html')
							+png(logoDefault)

				.rd-navbar-aside-right
					.rd-navbar-nav-wrap
						.rd-navbar-nav-scroll-holder
							include ../_navigation